<MudContainer MaxWidth="MaxWidth.Large">
	<!-- 商品分类区 -->
	<div class="mb-16">
		<div class="d-flex justify-between align-items-center mb-8">
			<MudText Typo="Typo.h4" Class="font-bold">商品分类</MudText>
			<MudLink Href="/categories" Class="text-primary flex items-center">
				查看全部 <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Size="Size.Small" Class="ml-1" />
			</MudLink>
		</div>

		<MudGrid class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">

			@foreach (var category in Categories)
			{
				<MudItem xs="6" sm="3">
					<MudCard Class="category-card hover:shadow-lg transition-shadow duration-300">
						<MudCardMedia Image="@category.ImageUrl" Height="180" Class="object-cover" />
						<MudCardContent>
							<MudText Typo="Typo.h6" Class="text-center">@category.Name</MudText>
						</MudCardContent>
						<MudCardActions Class="justify-center">
							<MudButton Variant="Variant.Text" Color="Color.Primary" Size="Size.Small">
								浏览 <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Size="Size.Small" Class="ml-1" />
							</MudButton>
						</MudCardActions>
					</MudCard>
				</MudItem>
			}

		</MudGrid>
	</div>
	<!-- 热门商品区 -->
	<div class="mb-16">
		<div class="d-flex justify-between align-items-center mb-8">
			<MudText Typo="Typo.h4" Class="font-bold">热门商品</MudText>
			<div class="d-flex space-x-2">
				<MudButton Variant="Variant.Outlined" Color="Color.Default" Size="Size.Small" Class="filter-btn">全部</MudButton>
				<MudButton Variant="Variant.Outlined" Color="Color.Default" Size="Size.Small" Class="filter-btn">新品</MudButton>
				<MudButton Variant="Variant.Outlined" Color="Color.Default" Size="Size.Small" Class="filter-btn">热销</MudButton>
				<MudButton Variant="Variant.Outlined" Color="Color.Default" Size="Size.Small" Class="filter-btn">折扣</MudButton>
			</div>
		</div>

		<MudGrid class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">

			@foreach (var product in PopularProducts)
			{
				<MudItem xs="6" sm="3">
					<MudCard Class="product-card">
						<div class="relative">
							<MudCardMedia Image="@product.ImageUrl" Height="250" Class="object-cover" />

							@if (product.IsNew)
							{
								<MudChip T="string" Color="Color.Primary" Size="Size.Small" Class="absolute top-2 left-2">
									新品
								</MudChip>
							}


							@if (product.DiscountPercentage > 0)
							{
								<MudChip T="string" Color="Color.Error" Size="Size.Small" Class="absolute top-2 right-2">
									-@product.DiscountPercentage.ToString()%
								</MudChip>
							}

							<div class="absolute bottom-2 right-2 opacity-0 product-card-hover">
								<MudIconButton Icon="@Icons.Material.Filled.FavoriteBorder" Color="Color.Default" Size="Size.Small" Class="bg-black bg-opacity-50 rounded-full" />
								<MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Default" Size="Size.Small" Class="bg-black bg-opacity-50 rounded-full ml-1" />
							</div>
						</div>
						<MudCardContent>
							<MudText Typo="Typo.body1" Class="font-medium">@product.Name</MudText>
							<div class="flex items-center mt-1">
								<MudRating Value="@product.Rating" MaxValue="5" ReadOnly="true" Size="Size.Small" />
								<MudText Typo="Typo.caption" Class="text-gray-500 ml-1">(@product.ReviewCount)</MudText>
							</div>
							<div class="flex items-center mt-2">

								@if (product.DiscountPercentage > 0)
								{
									<MudText Typo="Typo.h6" Class="font-bold text-primary">¥@product.PriceAfterDiscount</MudText>
									<MudText Typo="Typo.body2" Class="text-gray-500 line-through ml-2">¥@product.OriginalPrice</MudText>
								}
								else
								{
									<MudText Typo="Typo.h6" Class="font-bold text-primary">¥@product.OriginalPrice</MudText>
								}

							</div>
						</MudCardContent>
					</MudCard>
				</MudItem>
			}

		</MudGrid>

		<div class="text-center mt-10">
			<MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Medium">
				加载更多商品 <MudIcon Icon="@Icons.Material.Filled.More" Size="Size.Small" Class="ml-1" />
