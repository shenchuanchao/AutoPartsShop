4.2 App.razor (路由与布局选择逻辑)
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@GetLayout(routeData)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
                <Authorizing>
                    <div>正在验证身份...</div>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>抱歉，找不到您请求的页面。</p>
                <Button Type="primary" OnClick="@(() => NavigationManager.NavigateTo("/"))">返回首页</Button>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; }

    private Type GetLayout(RouteData routeData)
    {
        var pageType = routeData.PageType;

        // 管理后台页面
        if (pageType.FullName.StartsWith("AutoPartsShop.Pages.Admin"))
        {
            return typeof(AdminLayout);
        }

        // 其他页面使用前台布局
        return typeof(MainLayout);
    }
}